extends ../shared/layout

block content
 .container
   .row
    .col-xs-12.col-md-10.col-md-offset-1
      .col-xs-12.col-md-6
        h2 Mailing Lists
      .col-xs-12.col-md-6.text-right
        br 
        button.btn.btn-primary
          span.glyphicon.glyphicon-plus
          | &nbsp; Create New Mailing List
   .row
    .col-xs-12.col-md-10.col-md-offset-1        
      p #{user.name} you have <span data-bind="text: mailinglists.length"></span> mailing lists
 #list-modal.modal.fade(role="dialog")
  .modal-dialog
   .modal-content
    .modal-header
     button.close(type="button",data-dismiss="modal") &times;
     h4.modal-title.text-center.text-uppercase Create New Mailing List
    .modal-body
      .form-group
       label List Title
       input.form-control(type="text")
      //.form-group
       label Campaign Message
       textarea#campaign-message.form-control
      //.form-group
       label Campaign Attachments
       input.form-control#attachments(type="file")
      .form-group
       button.btn.btn-primary.btn-block.text-uppercase Create List

append scripts
  script(src="/js/viewmodels/vm_list.js")