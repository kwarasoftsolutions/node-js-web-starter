extends ../shared/layout

block content
 .container
   .row
    .col-xs-12.col-md-10.col-md-offset-1
      .col-xs-12.col-md-6
        h2 Campaigns
      .col-xs-12.col-md-6.text-right
        br 
        button.btn.btn-primary(type="button",data-toggle="modal", data-target="#campaign-modal")
          span.glyphicon.glyphicon-plus
          | &nbsp; Create New Campaign
   .row
    .col-xs-12.col-md-10.col-md-offset-1        
      p #{user.name} you have <span data-bind="text: campaigns.length"></span> campaigns

 #campaign-modal.modal.fade(role="dialog")
  .modal-dialog
   .modal-content
    .modal-header
     button.close(type="button",data-dismiss="modal") &times;
     h4.modal-title.text-center.text-uppercase Create New Campaign
    .modal-body
      .form-group
       label Campaign Title
       input.form-control(type="text")
      .form-group
       label Campaign Message
       textarea#campaign-message.form-control
      .form-group
       label Campaign Attachments
       input.form-control#attachments(type="file")
      .form-group
       button.btn.btn-primary.btn-block.text-uppercase Create campaign

    //.modal-footer
append scripts
  script(src="/js/viewmodels/vm_campaign.js")